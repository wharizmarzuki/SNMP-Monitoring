# SNMP Monitoring System - Backend Environment Variables
# Copy this file to .env and update with your actual values
# Run ./setup.sh for interactive configuration (recommended)

# ============================================================================
# SNMP Configuration
# ============================================================================
SNMP_COMMUNITY=public
SNMP_TIMEOUT=10
SNMP_RETRIES=3

# ============================================================================
# Network Discovery
# ============================================================================
# Network range for automatic device discovery (CIDR notation)
# Examples: 192.168.1.0/24, 10.0.0.0/16, 172.16.0.0/12
DISCOVERY_NETWORK=192.168.1.0/24

# ============================================================================
# Database
# ============================================================================
DATABASE_URL=sqlite:///./monitoring.db

# ============================================================================
# Application Settings
# ============================================================================
# Device polling interval in seconds (how often to check device status)
POLLING_INTERVAL=60

# Maximum concurrent operations
DISCOVERY_CONCURRENCY=20
POLLING_CONCURRENCY=20

# ============================================================================
# Email Settings (for alerts)
# ============================================================================
# SMTP server configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Email credentials (use app-specific password for Gmail)
# See: https://support.google.com/accounts/answer/185833
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-gmail-app-password

# ============================================================================
# Redis Cache Configuration
# ============================================================================
# Redis is used for caching API responses to improve performance
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_ENABLED=true

# ============================================================================
# Security / JWT Configuration
# ============================================================================
# IMPORTANT: Generate a secure random key for production!
# Use: openssl rand -hex 32
# Or let setup.sh generate one for you
JWT_SECRET_KEY=CHANGE-THIS-IN-PRODUCTION-USE-SETUP-SCRIPT
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24

# ============================================================================
# Frontend Configuration
# ============================================================================
# URL where the frontend application is hosted
# Development: http://localhost:3000
# Production: https://your-domain.com
FRONTEND_URL=http://localhost:3000

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
# LOG_FILE=app.log  # Uncomment to enable file logging

# ============================================================================
# Environment
# ============================================================================
# Options: development, testing, staging, production
ENVIRONMENT=development
DEBUG=false
